@{
    ViewBag.Title = "Home Page";
}

@model _02.Sumator_MVC.Models.SumViewModel

<div class="jumbotron">
    <div class="row">
        <div class="col-md-4">
            <h2>Calculator</h2>
            <form id="calculatorForm" method="post">
                <div class="row">
                    <div class="form-group">
                        <input type="text" name="firstNumber" value="@Model.FirstNumber" />
                    </div>
                    <div class="form-group">
                        <input type="text" name="secondNumber" value="@Model.SecondNumber" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Calculate" />
                    </div>
                </div>

                <div class="row">
                    Result: <span>@Model.Sum</span>
                    </div>
                </form>
            </div>
        </div>
    </div>